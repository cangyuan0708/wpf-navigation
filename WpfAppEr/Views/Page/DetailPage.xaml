<UserControl
    x:Class="WpfAppEr.Views.Page.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:control="clr-namespace:UICustomLibrary.Controls;assembly=UICustomLibrary"
    Background="#FF343434"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <UserControl.Resources>
        <Style
            x:Key="RadiusButtonStyle"
            TargetType="control:RadiusButton">
            <Setter
                Property="Background"
                Value="White" />
            <Setter
                Property="Foreground"
                Value="Black" />
            <Setter
                Property="HoverBackground"
                Value="Violet" />
        </Style>
    </UserControl.Resources>
    <StackPanel
        Margin="30">
        <TextBlock
            Text="{Binding DetailData}"
            FontSize="20" />
        <control:RadiusButton
            Margin="0 3"
            Style="{StaticResource RadiusButtonStyle}"
            Height="40"
            Content="Go Back"
            Command="{Binding GoBackCommand}" />

        <control:RadiusButton
            Margin="0 3"
            Style="{StaticResource RadiusButtonStyle}"
            Height="40"
            Content="Open"
            Command="{Binding OpenPopupCommand}" />
    </StackPanel>
</UserControl>
