<UserControl
    x:Class="WpfAppEr.Views.Page.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:control="clr-namespace:UICustomLibrary.Controls;assembly=UICustomLibrary"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <StackPanel
        Margin="30">
        <TextBlock
            Text="Main Page"
            FontSize="20" />
        <control:RadiusButton
            Margin="0 3"
            Foreground="Black"
            Background="Wheat"
            HoverBackground="Violet"
            Height="40"
            Content="Go to Detail"
            Command="{Binding GoToDetailCommand}" />
    </StackPanel>
</UserControl>
